{# templates/cart/index.html.twig #}

{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    {{ parent() }} {# Ajoute les styles globaux du parent #}
{% endblock %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    <h1>Mon Panier</h1>

    {% if cartItems is not empty %}
        <ul>
            {% for item in cartItems %}
                <li>
                    {{ item.robot.name }} ({{ item.quantity }}) - {{ item.robot.price }}€
                    <a href="{{ path('cart_remove', { 'id': item.id }) }}">Supprimer</a>
                </li>
            {% endfor %}
        </ul>

        <p>Total : {{ total }}€</p>

        <a href="{{ path('cart_clear') }}">Vider le panier</a>
    {% else %}
        <p>Votre panier est vide.</p>
    {% endif %}
{% endblock %}
