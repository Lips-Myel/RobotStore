{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/register.css') }}">
{% endblock %}

{% block body %}
    <div class="register-container">
        <h1>Inscription</h1>

        {# Affichage des erreurs globales du formulaire si elles existent #}
        {% if form_errors(registrationForm) %}
            <div class="form-errors">
                {{ form_errors(registrationForm) }}
            </div>
        {% endif %}

        {# Démarrage du formulaire #}
        {{ form_start(registrationForm, { 'attr': { 'class': 'register-form' } }) }}

        <div class="form-group">
            {# Champ email #}
            {{ form_row(registrationForm.email, {
                'label': 'Adresse email',
                'attr': { 'class': 'form-control', 'placeholder': 'Votre adresse email' }
            }) }}
        </div>

        <div class="form-group">
            {# Champ mot de passe #}
            {{ form_row(registrationForm.plainPassword, {
                'label': 'Mot de passe',
                'attr': { 'class': 'form-control', 'placeholder': 'Votre mot de passe' }
            }) }}
        </div>

        <div class="form-group">
            {# Case à cocher pour accepter les termes #}
            {{ form_row(registrationForm.agreeTerms, {
                'label': 'J\'accepte les termes et conditions',
                'attr': { 'class': 'form-check-input' }
            }) }}
        </div>

        <div class="form-group">
            {# Bouton de soumission #}
            <button type="submit" class="btn btn-primary">S'inscrire</button>
        </div>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
